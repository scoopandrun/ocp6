<div class="card mb-3">
  <a href="/tricks/{{ trick.slug }}">
    <img
      src="{{ trick.mainMedia.url ?? asset('images/fallback-trick-image-640.jpg') }}"
      class="w-100 rounded-top"
      alt="{{ trick.name }}"
    >
  </a>
  
  <div class="card-body text-muted">
    <a href="/tricks/{{ trick.slug }}">
      <h5 class="card-title">{{ trick.name }}</h5>
    </a>

    {% if trick.category.id %}
      <p class="badge bg-secondary">{{ trick.category.name|lower }}</p>
    {% endif %}
  </div>
</div>
